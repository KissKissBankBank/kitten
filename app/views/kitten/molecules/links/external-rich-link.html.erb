<%= example 'Default rich content link' do %>
  <%= react_component_container('ExternalRichLink') %>
<% end %>

<%= example 'Rich content link' do %>
  <%= react_component_container('ExternalRichLink') do %>
    <%= react_component_child(
          'svg',
          {
            width: '100px',
            height: '50px',
            viewBox: '0 0 100 50',
            xmlns:'http://www.w3.org/2000/svg'
          },
          {
            isDomElement: true
          }
    ) do %>
      <%= react_component_child(
            'polyline',
            {
              points: '5 20, 20 20, 25 10, 35 30, 45 10, 55 30, 65 10, 75 30, 80 20, 95 20',
              stroke: 'black',
              strokeWidth: '3',
              fill: 'none'
            },
            {
              isDomElement: true
            }
      ) %>
    <% end %>
  <% end %>
<% end %>

<%= example 'Image link' do %>
  <%= react_component_container('ExternalRichLink') do %>
    <%= react_component_child(
          'img',
          {
            src: 'https://placekitten.com/g/150/51',
            alt: 'Kawaiii kitten!'
          },
          {
            isDomElement: true
          }
    ) %>
  <% end %>
<% end %>
