<div class="k-Grid">
  <div class="k-Grid__col k-Grid__col--12">
    <div class="k-Grid">
      <div class="k-Grid__col k-Grid__col--12 k-Grid__col--3@l">
        <%= example 'Arrow icon right' do %>
          <%= react_component 'ArrowIcon' %>
        <% end %>
      </div>

      <div class="k-Grid__col k-Grid__col--12 k-Grid__col--3@l">
        <%= example 'Arrow icon left' do %>
          <%= react_component 'ArrowIcon', props: {
            direction: 'left',
          } %>
        <% end %>
      </div>

      <div class="k-Grid__col k-Grid__col--12 k-Grid__col--3@l">
        <%= example 'Arrow icon top' do %>
          <%= react_component 'ArrowIcon', props: {
            direction: 'top',
          } %>
        <% end %>
      </div>

      <div class="k-Grid__col k-Grid__col--12 k-Grid__col--3@l">
        <%= example 'Arrow icon bottom' do %>
          <%= react_component 'ArrowIcon', props: {
            direction: 'bottom',
          } %>
        <% end %>
      </div>
    </div>
  </div>
</div>
