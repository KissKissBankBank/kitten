<div class="k-Grid">
  <div class="k-Grid__col k-Grid__col--12 k-Grid__col--3@l">
    <div class="k-Grid">
      <div class="k-Grid__col k-Grid__col--12 k-Grid__col--3@m k-Grid__col--12@l">
        <%= example 'Visa' do %>
          <%= react_component('KarlPaymentButtonVisa', props: {
              name: 'payment-button-1'
            }
          ) %>
        <% end %>
      </div>
    </div>
  </div>

  <div class="k-Grid__col k-Grid__col--12 k-Grid__col--3@l">
    <div class="k-Grid">
      <div class="k-Grid__col k-Grid__col--12 k-Grid__col--3@m k-Grid__col--12@l">
        <%= example 'Mastercard' do %>
          <%= react_component('KarlPaymentButtonMastercard', props: {
              name: 'payment-button-1',
              defaultChecked: true,
              id: "checked-payment-button"
            }
          ) %>
        <% end %>
      </div>
    </div>
  </div>

  <div class="k-Grid__col k-Grid__col--12 k-Grid__col--3@l">
    <div class="k-Grid">
      <div class="k-Grid__col k-Grid__col--12 k-Grid__col--3@m k-Grid__col--12@l">
        <%= example 'Cb' do %>
          <%= react_component('KarlPaymentButtonCb', props: {
              name: 'payment-button-1',
              id: "checked-payment-button-cb"
            }
          ) %>
        <% end %>
      </div>
    </div>
  </div>

  <div class="k-Grid__col k-Grid__col--12 k-Grid__col--3@l">
    <div class="k-Grid">
      <div class="k-Grid__col k-Grid__col--12 k-Grid__col--3@m k-Grid__col--12@l">
        <%= example 'Virement' do %>
          <%= react_component('KarlPaymentButtonVirement', props: {
              name: 'payment-button-1',
              id: "checked-payment-button-mastercard"
            }
          ) %>
        <% end %>
      </div>
    </div>
  </div>
</div>
