    <%= example 'List of links' do %>
      <%= react_component 'LinkList', props: {
        items: [
          { key: 'key1', content: 'Litterae', href: '#' },
          { key: 'key2', content: 'Notae', href: '#' },
          { key: 'key3', content: 'Bibliographia', href: '#' },
          { key: 'key4', content: 'Nexus', href: '#' },
