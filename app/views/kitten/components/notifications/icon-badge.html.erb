<div class="k-Grid">
  <div class="k-Grid__col k-Grid__col--12 k-Grid__col--4@l">
    <%= example 'Badge with one character' do %>
      <p>
        <%= react_component 'IconBadge', props: {
          children: 'C',
        } %>
      </p>
    <% end %>
  </div>

  <div class="k-Grid__col k-Grid__col--12 k-Grid__col--4@l">
    <%= example 'Badge with two characters' do %>
      <p>
        <%= react_component 'IconBadge', props: {
          children: 'A+',
        } %>
      </p>
    <% end %>
  </div>

  <div class="k-Grid__col k-Grid__col--12 k-Grid__col--4@l">
    <%= example 'Badge with svg' do %>
      <p>
        <%= react_component 'KarlIconBadgeWithSvg' %>
      </p>
    <% end %>
  </div>
</div>
