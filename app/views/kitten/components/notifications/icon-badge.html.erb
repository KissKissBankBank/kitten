<div class="k-Grid">
  <div class="k-Grid__col k-Grid__col--12 k-Grid__col--4@l">
    <%= example 'With one character' do %>
      <p>
        <%= react_component 'IconBadge', props: {
          className: 'karl-u-align-center@xs-down',
          children: 'C',
        } %>
      </p>
    <% end %>
  </div>

  <div class="k-Grid__col k-Grid__col--12 k-Grid__col--4@l">
    <%= example 'With two characters' do %>
      <p>
        <%= react_component 'IconBadge', props: {
          className: 'karl-u-align-center@xs-down',
          children: 'A+',
        } %>
      </p>
    <% end %>
  </div>

  <div class="k-Grid__col k-Grid__col--12 k-Grid__col--4@l">
    <%= example 'With svg' do %>
      <p>
        <%= react_component 'KarlIconBadgeWithSvg', props: {
          className: 'karl-u-align-center@xs-down',
        } %>
      </p>
    <% end %>
  </div>
</div>
