<%= example 'Alert' do %>
  <%= react_component 'KarlAlert' %>
<% end %>

<%= example 'Error alert' do %>
  <%= react_component 'KarlAlert', props: {
    error: true,
    closeButton: true,
  } %>
<% end %>

<%= example 'Success alert' do %>
  <%= react_component 'KarlAlert', props: {
    success: true,
    closeButton: true,
    closeButtonLabel: 'Close this alert',
  } %>
<% end %>

<%= example 'Alert with markdown' do %>
  <%= react_component 'KarlAlertWithMarkdown' %>
<% end %>
