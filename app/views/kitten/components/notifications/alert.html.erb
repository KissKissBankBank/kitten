<%= example 'Alert' do %>
  <%= react_component 'KarlAlert' %>
<% end %>

<%= example 'Error alert' do %>
  <%= react_component 'KarlAlertWithButton', props: {
    error: true,
    closeButton: true,
  } %>
<% end %>

<%= example 'Success alert' do %>
  <%= react_component 'KarlAlertWithButton', props: {
    success: true,
    closeButton: true,
    closeButtonLabel: 'Close this alert',
  } %>
<% end %>
