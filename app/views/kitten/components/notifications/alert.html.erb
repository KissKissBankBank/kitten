<div class="k-Grid">
  <div class="k-Grid__col k-Grid__col--12">
    <%= example 'Default' do %>
      <%= react_component 'KarlAlert', props: {
        closeButton: true,
      } %>
    <% end %>

    <%= example 'With many text, link and button' do %>
      <%= react_component 'KarlAlertWithButton' %>
    <% end %>

    <%= example 'Error' do %>
      <%= react_component 'KarlAlert', props: {
        error: true,
        closeButton: true,
      } %>
    <% end %>

    <%= example 'Success' do %>
      <%= react_component 'KarlAlert', props: {
        success: true,
        closeButton: true,
        closeButtonLabel: 'Close this alert',
      } %>
    <% end %>
  </div>
</div>
