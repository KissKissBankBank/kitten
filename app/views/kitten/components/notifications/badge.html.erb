<div class="k-Grid">
  <div class="k-Grid__col k-Grid__col--12 k-Grid__col--4@l">
   <%= example 'Badge with one number' do %>
      <p>
        <%= react_component 'Badge', props: {
          children: '4',
        } %>
      </p>
    <% end %>
  </div>

  <div class="k-Grid__col k-Grid__col--12 k-Grid__col--4@l">
    <%= example 'Badge with two numbers' do %>
      <p>
        <%= react_component 'Badge', props: {
          children: '42',
        } %>
      </p>
    <% end %>
  </div>

  <div class="k-Grid__col k-Grid__col--12 k-Grid__col--4@l">
    <%= example 'Badge with more numbers' do %>
      <p>
        <%= react_component 'Badge', props: {
          children: '4242',
        } %>
      </p>
    <% end %>
  </div>
</div>
