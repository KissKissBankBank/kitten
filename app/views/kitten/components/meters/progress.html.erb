<div class="k-Grid">
  <div class="k-Grid__col k-Grid__col--12 k-Grid__col--6@l">
    <div class="k-Grid">
      <div class="k-Grid__col k-Grid__col--12">
        <%= example 'Normal' do %>
          <%= react_component 'Progress', props: {
              value: 60,
            }
          %>
        <% end %>
      </div>

      <div class="k-Grid__col k-Grid__col--12">
        <%= example 'With custom color' do %>
          <%= react_component 'Progress', props: {
              color: '#68ffa0',
              value: 42,
            }
          %>
        <% end %>
      </div>

      <div class="k-Grid__col k-Grid__col--12">
        <%= example 'With animation' do %>
          <%= react_component 'KarlRandomProgress' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
