<div class="k-Grid">
  <div class="k-Grid__col k-Grid__col--12 k-Grid__col--1@m k-Grid__col--1@l">
    <%= example 'Loader' do %>
      <%= react_component 'Loader' %>
    <% end %>
  </div>

  <div class="k-Grid__col k-Grid__col--12 k-Grid__col--3@m k-Grid__col--3@l">
    <%= example 'Loader in Button component' do %>
      <%= react_component 'KarlLoaderInButton' %>
    <% end %>
  </div>

  <div class="k-Grid__col k-Grid__col--12 k-Grid__col--8@m k-Grid__col--8@l">
    <%= example 'Loader with top paragraph' do %>
      <%= react_component 'LoaderWithParagraph', props: {
        loaderPosition: 'bottom',
      } %>
    <% end %>

    <%= example 'Loader with right paragraph' do %>
      <%= react_component 'LoaderWithParagraph' %>
    <% end %>

    <%= example 'Loader with bottom paragraph' do %>
      <%= react_component 'LoaderWithParagraph', props: {
        loaderPosition: 'top',
      } %>
    <% end %>

    <%= example 'Loader with left paragraph' do %>
      <%= react_component 'LoaderWithParagraph', props: {
        loaderPosition: 'right',
      } %>
    <% end %>
  </div>
</div>
