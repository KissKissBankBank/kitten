<%= example "default number input" do %>
  <p class="k-TextInputWithUnit">
    <input class="k-TextInputWithUnit__input"
           placeholder="42"
           type="number" />
    <span class="k-TextInputWithUnit__unit">$</span>
  </p>
<% end %>

