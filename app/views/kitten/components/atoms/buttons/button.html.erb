<div class="karl-Example__column">
  <%= example "Button" do %>
    <button class="k-Button">
      Button
    </button>
  <% end %>
</div>

<div class="karl-Example__column">
  <%= example "Light button" do %>
    <button class="k-Button k-Button--light">
      Button
    </button>
  <% end %>
</div>

<div class="karl-Example__column">
  <%= example "Button with many words" do %>
    <button class="k-Button k-Button--light">
      Button with many words
    </button>
  <% end %>

  <%= example "Big light button" do %>
    <button class="k-Button k-Button--light k-Button--big">
      Big button
    </button>
  <% end %>

  <%= example "Big light button" do %>
    <button class="k-Button k-Button--light k-Button--big">
      Big button with many words
    </button>
  <% end %>

  <%= example "Disabled button" do %>
    <button class="k-Button" disabled>
      Button
    </button>
  <% end %>
</div>
