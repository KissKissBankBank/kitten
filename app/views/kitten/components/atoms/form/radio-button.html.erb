<%= example 'Radio buttons' do %>

  <div class="k-RadioButton">
    <input id="karl-radio-button-1"
           type="radio"
           name="karl-radio-button"
           class="k-RadioButton__input" />
    <label for="karl-radio-button-1" class="k-RadioButton__label">
      Default
    </label>
  </div>

  <div class="k-RadioButton">
    <input id="karl-radio-button-2"
           type="radio"
           name="karl-radio-button"
           checked
           class="k-RadioButton__input" />
    <label for="karl-radio-button-2" class="k-RadioButton__label">
      Default checked
    </label>
  </div>

  <div class="k-RadioButton">
    <input id="karl-radio-button-3"
           type="radio"
           name="karl-radio-button"
           disabled
           class="k-RadioButton__input" />
    <label for="karl-radio-button-3" class="k-RadioButton__label">
      Default disabled
    </label>
  </div>

<% end %>

<%= example 'Large radio buttons' do %>

  <div class="k-RadioButton">
    <input id="karl-radio-button-large-1"
           type="radio"
           name="karl-radio-button-large"
           class="k-RadioButton__input" />
    <label for="karl-radio-button-large-1"
           class="k-RadioButton__label k-RadioButton__label--large">
      Large
    </label>
  </div>

  <div class="k-RadioButton">
    <input id="karl-radio-button-large-2"
           type="radio"
           name="karl-radio-button-large"
           checked
           class="k-RadioButton__input" />
    <label for="karl-radio-button-large-2"
           class="k-RadioButton__label k-RadioButton__label--large">
      Large checked
    </label>
  </div>

  <div class="k-RadioButton">
    <input id="karl-radio-button-large-3"
           type="radio"
           name="karl-radio-button-large"
           disabled
           class="k-RadioButton__input" />
    <label for="karl-radio-button-large-3"
           class="k-RadioButton__label k-RadioButton__label--large">
      Large disabled
    </label>
  </div>

  <%= example 'Radio button containers' do %>
    <div class="k-RadioButton">
      <input id="karl-radio-button-with-content"
             type="radio"
             name="karl-radio-button-with-content"
             class="k-RadioButton__input" />
      <label for="karl-radio-button-with-content"
             class="k-RadioButton__label k-RadioButton__label--large">
        Large
      </label>
      <div class="k-RadioButton__labelContents">
        <p> The content is aligned with radio button label above !</p>
      </div>
    </div>

  <% end %>

<% end %>
