<%= example 'Radio buttons' do %>

  <div class="k-RadioButton">
    <input id="karl-radio-button-1"
           type="radio"
           name="karl-radio-button"
           class="k-RadioButton__input" />
    <label for="karl-radio-button-1" class="k-RadioButton__label">
      Default
    </label>
  </div>

  <div class="k-RadioButton">
    <input id="karl-radio-button-2"
           type="radio"
           name="karl-radio-button"
           checked
           class="k-RadioButton__input" />
    <label for="karl-radio-button-2" class="k-RadioButton__label">
      Default checked
    </label>
  </div>

  <div class="k-RadioButton">
    <input id="karl-radio-button-3"
           type="radio"
           name="karl-radio-button"
           disabled
           class="k-RadioButton__input" />
    <label for="karl-radio-button-3" class="k-RadioButton__label">
      Default disabled
    </label>
  </div>

<% end %>

