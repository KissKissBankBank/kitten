<div class="k-Grid">
  <div class="k-Grid__col k-Grid__col--12">
    <div class="k-Grid">
      <div class="k-Grid__col k-Grid__col--12 k-Grid__col--3@l k-Grid__col--6@m">
        <div class="karl-Illustrations">
          <div class="karl-Illustrations__cardBackground">
            <%= example 'Loudspeaker illustration' do %>
              <%= react_component 'LoudspeakerIllustration' %>
            <% end %>
          </div>
        </div>
      </div>

      <div class="k-Grid__col k-Grid__col--12 k-Grid__col--3@l k-Grid__col--6@m">
        <div class="karl-Illustrations">
          <div class="karl-Illustrations__card">
            <%= example 'Phone illustration' do %>
              <%= react_component 'PhoneIllustration' %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
