<div class="k-Grid">
  <div class="k-Grid__col k-Grid__col--12">
    <%= example 'row' do %>
      <%= react_component 'KarlRow' %>
    <% end %>
  </div>

  <div class="k-Grid__col k-Grid__col--12">
    <%= example 'padded row' do %>
      <%= react_component 'KarlRow', props: {
        padded: true,
      } %>
    <% end %>
  </div>

  <div class="k-Grid__col k-Grid__col--12">
    <%= example 'centered row' do %>
      <%= react_component 'KarlRow', props: {
        centered: true,
      } %>
    <% end %>
  </div>

  <div class="k-Grid__col k-Grid__col--12">
    <%= example 'light row' do %>
      <%= react_component 'KarlRow', props: {
        light: true,
      } %>
    <% end %>
  </div>

  <div class="k-Grid__col k-Grid__col--12">
    <%= example 'dark row' do %>
      <%= react_component 'KarlRow', props: {
        dark: true,
      } %>
    <% end %>
  </div>

  <div class="k-Grid__col k-Grid__col--12">
    <%= example 'row with light bottom border' do %>
      <%= react_component 'KarlRow', props: {
        lightBottomBorder: true,
      } %>
    <% end %>
  </div>
</div>
