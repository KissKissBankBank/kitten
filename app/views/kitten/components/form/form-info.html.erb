<%= example "Form info" do %>
  <div class="k-FormInfo">
    <label for="input-form-info" class="k-FormInfo__label">
      Label name here
    </label>

    <%= react_component('TextInput', props: {
      id: 'input-form-info',
      placeholder: 'Lorem ipsum dolor sit amet',
    }) %>
  </div>
<% end %>

<%= example "Form info with textInput error" do %>
  <div class="k-FormInfo">
    <label for="input-form-info-error" class="k-FormInfo__label">
      Label name here
    </label>

    <%= react_component('TextInput', props: {
      id: 'input-form-info-error',
      error: true,
      placeholder: 'Lorem ipsum dolor sit amet',
    }) %>

    <p class="k-FormInfo__error">Cum sociis natoque penatibus et magnis</p>
  </div>
<% end %>

<%= example "Form info with RadioButton error" do %>
  <div class="k-FormInfo">
    <label class="k-FormInfo__label">
      Label name here
    </label>

    <%= react_component('RadioButtonSet', props: {
      error: true,
      name: 'formInfoRadioButtonSetError',
      items: [{
        text: 'Error default',
        id: 'radioButtonSet1',
      }, {
        text: 'Error default checked',
        children: 'lorem ipsum dolor',
        defaultChecked: true,
        id: 'radioButtonSet2',
      }],
    }) %>

    <p class="k-FormInfo__error">Cum sociis natoque penatibus et magnis</p>
  </div>
<% end %>

<%= example "Form info with Checkbox error" do %>
  <div class="k-FormInfo">
