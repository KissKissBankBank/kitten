<%= example 'Checkbox' do %>
  <%= react_component('Checkbox', props: {
      id: "input-1",
      children: "Filter 1",
    }
  ) %>

  <%= react_component('Checkbox', props: {
      id: "input-2",
      children: "Filter 2",
      defaultChecked: true,
    }
  ) %>
<% end %>

<%= example 'Checkbox - Error' do %>
  <%= react_component('KarlCheckboxError') %>
<% end %>

<%= example 'Disabled checkbox' do %>
  <%= react_component('Checkbox', props: {
      id: "input-3",
      children: "Filter 1",
      disabled: true,
    }
  ) %>

  <%= react_component('Checkbox', props: {
      id: "input-4",
      children: "Filter 2",
      defaultChecked: true,
      disabled: true,
    }
  ) %>
<% end %>
