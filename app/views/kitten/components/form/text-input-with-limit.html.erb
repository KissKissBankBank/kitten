<div class="k-Grid">
  <div class="k-Grid__col k-Grid__col--12 k-Grid__col--6@l">
    <div class="k-Grid">
      <div class="k-Grid__col k-Grid__col--12 k-Grid__col--6@m k-Grid__col--12@l">
        <%= example "Normal" do %>
          <%= react_component('TextInputWithLimit') %>
        <% end %>
      </div>

      <div class="k-Grid__col k-Grid__col--12 k-Grid__col--6@m k-Grid__col--12@l">
        <%= example "Textarea" do %>
          <%= react_component('TextInputWithLimit', props: {
              tag: 'textarea',
              rows: 4,
              placeholder: 'Lorem ipsum dolor sit amet',
              limit: 128,
          }) %>
        <% end %>
      </div>
    </div>
  </div>
</div>
