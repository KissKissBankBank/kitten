<div class="k-Grid">
  <div class="k-Grid__col k-Grid__col--12 k-Grid__col--6@l">
    <div class="k-Grid">
      <div class="k-Grid__col k-Grid__col--12 k-Grid__col--4@m k-Grid__col--12@l">
        <%= example "Normal" do %>
          <%= react_component('TextInputWithLimit') %>
        <% end %>
      </div>
      <div class="k-Grid__col k-Grid__col--12 k-Grid__col--4@m k-Grid__col--12@l">
        <%= example "Text input with limit - disabled" do %>
          <%= react_component('TextInputWithLimit', props: {
            disabled: true,
            placeholder: 'Lorem ipsum dolor'
           }) %>
        <% end %>
      </div>
    </div>
  </div>
  
  <div class="k-Grid__col k-Grid__col--12 k-Grid__col--6@l">
    <div class="k-Grid">
      <div class="k-Grid__col k-Grid__col--12 k-Grid__col--4@m k-Grid__col--12@l">
        <%= example "Textarea with limit" do %>
          <%= react_component('TextInputWithLimit', props: {
            tag: 'textarea',
            rows: 4,
            placeholder: 'Lorem ipsum dolor sit amet',
            limit: 128,
          }) %>
        <% end %>
      </div>
      <div class="k-Grid__col k-Grid__col--12 k-Grid__col--4@m k-Grid__col--12@l">
        <%= example "Textarea with limit - disabled" do %>
          <%= react_component('TextInputWithLimit', props: {
            tag: 'textarea',
            rows: 4,
            placeholder: 'Lorem ipsum dolor sit amet',
            limit: 128,
            disabled: true,
          }) %>
        <% end %>
      </div>
    </div>
  </div>
</div>