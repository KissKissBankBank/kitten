<div class="k-Grid">
  <div class="k-Grid__col k-Grid__col--12 k-Grid__col--4@l">
    <div class="k-Grid">
      <div class="k-Grid__col k-Grid__col--12 k-Grid__col--4@m k-Grid__col--12@l">
        <%= example 'Tiny' do %>
          <%= react_component 'TextInputWithUnit', props: {
            placeholder: 'Lorem ipsum dolor sit amet',
            unit: '€',
            tiny: true,
          } %>
        <% end %>
      </div>
      <div class="k-Grid__col k-Grid__col--12 k-Grid__col--4@m k-Grid__col--12@l">
        <%= example 'Normal' do %>
          <%= react_component 'TextInputWithUnit', props: {
            placeholder: 'Lorem ipsum dolor sit amet',
            unit: '€',
          } %>
        <% end %>
      </div>
    </div>
  </div>

  <div class="k-Grid__col k-Grid__col--12 k-Grid__col--4@l">
    <div class="k-Grid">
      <div class="k-Grid__col k-Grid__col--12 k-Grid__col--4@m k-Grid__col--12@l">
        <%= example 'Valid' do %>
          <%= react_component 'TextInputWithUnit', props: {
            placeholder: 'Lorem ipsum dolor sit amet',
            unit: '$',
            valid: true,
          } %>
        <% end %>
      </div>

      <div class="k-Grid__col k-Grid__col--12 k-Grid__col--4@m k-Grid__col--12@l">
        <%= example 'Error' do %>
          <%= react_component 'TextInputWithUnit', props: {
            placeholder: 'Lorem ipsum dolor sit amet',
            unit: '£',
            error: true,
          } %>
        <% end %>
      </div>
    </div>
  </div>

  <div class="k-Grid__col k-Grid__col--12 k-Grid__col--4@l">
    <div class="k-Grid">
      <div class="k-Grid__col k-Grid__col--12 k-Grid__col--4@m k-Grid__col--12@l">
      <%= example 'Disabled' do %>
          <%= react_component 'TextInputWithUnit', props: {
            placeholder: 'Lorem ipsum dolor sit amet',
            disabled: true,
            unit: '€',
          } %>
        <% end %>
      </div>
    </div>
  </div>

  <div class="k-Grid__col k-Grid__col--12 k-Grid__col--4@l">
    <div class="k-Grid">
      <div class="k-Grid__col k-Grid__col--12 k-Grid__col--4@m k-Grid__col--12@l">
        <%= example 'Tiny with small input' do %>
          <%= react_component 'TextInputWithUnit', props: {
            placeholder: '30',
            max: 60,
            min: 1,
            type: 'number',
            unit: 'days',
            unitWord: true,
            tiny: true,
            digits: 2,
          } %>
        <% end %>
      </div>

      <div class="k-Grid__col k-Grid__col--12 k-Grid__col--4@m k-Grid__col--12@l">
        <%= example 'With small input' do %>
          <%= react_component 'TextInputWithUnit', props: {
            placeholder: '30',
            max: 60,
            min: 1,
            type: 'number',
            unit: 'days',
            unitWord: true,
            digits: 2,
          } %>
        <% end %>
      </div>
    </div>
  </div>
</div>
