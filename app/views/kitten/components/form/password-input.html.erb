<div class="k-Grid">
  <div class="k-Grid__col k-Grid__col--12 k-Grid__col--6@l">
    <div class="k-Grid">
      <div class="k-Grid__col k-Grid__col--12 k-Grid__col--8@s k-Grid__col--12@l">
        <%= example 'Tiny' do %>
          <%= react_component 'PasswordInput', props: {
            iconLabel: 'Show password',
            hiddenIconLabel: 'Hide password',
            textInputProps: {
              tiny: true,
              placeholder: 'Enter your code',
            }
          } %>
        <% end %>
      </div>

      <div class="k-Grid__col k-Grid__col--12 k-Grid__col--8@s k-Grid__col--12@l">
        <%= example 'Normal' do %>
          <%= react_component 'PasswordInput', props: {
            iconLabel: 'Show password',
            hiddenIconLabel: 'Hide password',
            textInputProps: {
              placeholder: 'Enter your code',
            }
          } %>
        <% end %>
      </div>
    </div>
  </div>
</div>
