<%= example "Text input with button" do %>
  <form role="button">
    <div class="k-TextInputWithButton">
      <input class="k-TextInput k-TextInputWithButton__input"
             type="text"
             placeholder="Lorem ipsum dolor sit amet" />

      <input class="k-TextInputWithButton__button"
             type="submit"
             value="Button" />
    </div>
  </form>
<% end %>


