    <div class="k-Grid">
      <div class="k-Grid__col k-Grid__col--12 k-Grid__col--4@m k-Grid__col--12@l">
        <%= example 'Tiny' do %>
          <%= react_component 'TextInputWithButton', props: {
            textInputProps: {
              tiny: true,
              placeholder: 'Lorem ipsum dolor sit amet…',
            }
          } %>
        <% end %>
      </div>

      <div class="k-Grid__col k-Grid__col--12 k-Grid__col--4@m k-Grid__col--12@l">
        <%= example 'Normal' do %>
          <%= react_component 'TextInputWithButton', props: {
            textInputProps: {
              placeholder: 'Lorem ipsum dolor sit amet…',
            }
          } %>
        <% end %>
      </div>
    </div>
  </div>

  <div class="k-Grid__col k-Grid__col--12 k-Grid__col--6@l">
