<div class="k-Grid">
  <div class="k-Grid__col k-Grid__col--12 k-Grid__col--3@m">
    <%= example 'Crowdfunding card' do %>
      <%= react_component 'CrowdfundingCard' %>
    <% end %>
  </div>

  <div class="k-Grid__col k-Grid__col--12 k-Grid__col--3@m">
    <%= example 'Clickable crowdfunding card' do %>
      <%= react_component 'CrowdfundingCard', props: {
        href: '#',
      } %>
    <% end %>
  </div>

  <div class="k-Grid__col k-Grid__col--12 k-Grid__col--3@m">
    <%= example 'Loading crowdfunding card' do %>
      <%= react_component 'CrowdfundingCard', props: {
        loading: 'true',
      } %>
    <% end %>
  </div>
</div>
