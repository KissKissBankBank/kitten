<div class="k-Grid">
  <div class="k-Grid__col k-Grid__col--12 k-Grid__col--3@m">
    <%= example 'Simple card' do %>
      <%= react_component 'SimpleCard', props: {
          imageProps: {
            src: 'https://placehold.it/100x100/caf4fe/caf4fe',
          },
          title: 'Title',
          subtitle: 'Subtitle',
        } %>
    <% end %>
  </div>

  <div class="k-Grid__col k-Grid__col--12 k-Grid__col--3@m">
    <%= example 'Simple card without horizontal stroke' do %>
      <%= react_component 'SimpleCard', props: {
          imageProps: {
            src: 'https://placehold.it/100x100/caf4fe/caf4fe',
          },
          title: 'Title',
          titleProps: { className: 'k-u-align-center' },
          horizontalStroke: false,
        } %>
    <% end %>
  </div>

  <div class="k-Grid__col k-Grid__col--12 k-Grid__col--3@m">
    <%= example 'Clickable simple card' do %>
      <%= react_component 'SimpleCard', props: {
          imageProps: {
            src: 'https://placehold.it/100x100/caf4fe/caf4fe',
          },
          title: 'Title',
          paragraph: 'Excogitatum est super his, ut homines quidam ignoti,
            vilitate ipsa parum cavendi ad colligendos rumores per Antiochiae
            latera cuncta destinarentur',
          href: '#',
        } %>
    <% end %>
  </div>
</div>
