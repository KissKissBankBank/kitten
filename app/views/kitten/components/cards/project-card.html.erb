<div class="k-Grid">
  <div class="k-Grid__col k-Grid__col--12 k-Grid__col--4@m k-Grid__col--4@l">
    <%= example 'Project card' do %>
      <%= react_component 'ProjectCard', props: {
        progress: 42,
        avatar: 'https://placehold.it/400x200/4a84ff/4a84ff',
        image: 'https://placehold.it/400x200/4a84ff/4a84ff',
        scoreValue: 'A',
        infosValuesColored: true,
      } %>
    <% end %>
  </div>

  <div class="k-Grid__col k-Grid__col--12 k-Grid__col--4@m k-Grid__col--4@l">
    <%= example 'Clickable project card' do %>
      <%= react_component 'ProjectCard', props: {
        href: '#',
        progress: 42,
        avatar: 'https://placehold.it/400x200/4a84ff/4a84ff',
        image: 'https://placehold.it/400x200/4a84ff/4a84ff',
        scoreValue: 'A',
      } %>
    <% end %>
  </div>

  <div class="k-Grid__col k-Grid__col--12 k-Grid__col--4@m k-Grid__col--4@l">
    <%= example 'Project card with status' do %>
      <%= react_component 'ProjectCard', props: {
        progress: 42,
        avatar: 'https://placehold.it/400x200/4a84ff/4a84ff',
        image: 'https://placehold.it/400x200/4a84ff/4a84ff',
        statusContent: 'Status',
      } %>
    <% end %>
  </div>

  <div class="k-Grid__col k-Grid__col--12 k-Grid__col--4@m k-Grid__col--4@l">
    <%= example 'Project card without progress' do %>
      <%= react_component 'ProjectCard', props: {
        progress: false,
        avatar: 'https://placehold.it/400x200/4a84ff/4a84ff',
        image: 'https://placehold.it/400x200/4a84ff/4a84ff',
      } %>
    <% end %>
  </div>

  <div class="k-Grid__col k-Grid__col--12 k-Grid__col--4@m k-Grid__col--4@l">
    <%= example 'Disabled project card' do %>
      <%= react_component 'ProjectCard', props: {
        progress: 42,
        avatar: 'https://placehold.it/400x200/4a84ff/4a84ff',
        image: 'https://placehold.it/400x200/4a84ff/4a84ff',
        disabled: true,
      } %>
    <% end %>
  </div>
</div>
