<div class="k-Grid">
  <div class="k-Grid__col k-Grid__col--12">
    <div class="k-Grid">
      <% colors.each do |color| %>
        <div class="k-Grid__col k-Grid__col--12 k-Grid__col--4@l k-Grid__col--6@m">
          <div
            class="karl-Colors"
            style="background-color: <%= color[:hexa] %>"
          >
            <div
              class="karl-Colors__cardDescription"
              style="color: <%= color[:colorName] %>"
            >
              <p class="k-u-size-default k-u-weight-bold karl-Colors__cardColorName"><%= color[:name] %></p>
              <p class="k-u-size-micro k-u-weight-bold karl-Colors__cardHexaName"><%= color[:hexa] %></p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
