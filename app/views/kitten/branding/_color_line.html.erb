<div class="k-Grid">
  <div class="k-Grid__col k-Grid__col--12">
    <div class="karl-Colors">
      <% colors.each do |color| %>
        <div
          class="karl-Colors__container <%= color[:className] %>"
          style="background-color: <%= color[:hexa] %>"
        >
          <div
            class="k-u-margin-bottom-triple k-u-margin-left-double"
            style="color: <%= color[:colorName] %>"
          >
            <p class="k-u-size-default k-u-weight-bold k-u-margin-none">
              <%= color[:name] %>
            </p>
            <p class="k-u-size-micro k-u-weight-bold k-u-margin-none">
              <%= color[:hexa] %>
            </p>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
