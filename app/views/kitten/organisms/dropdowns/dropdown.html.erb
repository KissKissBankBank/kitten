<%= example 'Default dropdown (positionned with itself)' do %>
  <%= react_component_container('Dropdown', {
        buttonClassName: 'karl-Dropdown--default__button',
        dropdownListClassName: 'karl-Dropdown--default'
      }) do %>
      <%= react_component_child('a', {
            className: 'karl-Dropdown--default__item',
          },
          {
            text: 'Cute',
            parentProp: 'dropdownList',
            isDomElement: true
          }
      ) %>
      <%= react_component_child('a', {
            className: 'karl-Dropdown--default__item',
          },
          {
            text: 'And lovely',
            parentProp: 'dropdownList',
            isDomElement: true
          }
      ) %>
      <%= react_component_child('a', {
            className: 'karl-Dropdown--default__item',
          },
          {
            text: 'Kitten',
            parentProp: 'dropdownList',
            isDomElement: true
          }
      ) %>
  <% end %>
<% end %>

