<!DOCTYPE html>
<html>
<head>

<title>Kitten style guide</title>

<%#= webpack_stylesheet_tags(Kitten.configuration.webpack_entry_point) %>
<link rel="stylesheet" href="/webpack/webpack-style.css" charset="utf-8">
<%= stylesheet_link_tag 'https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600' %>
<%= stylesheet_link_tag 'https://fonts.googleapis.com/css?family=Dosis' %>

<%= csrf_meta_tags %>

<script src="https://cdnjs.cloudflare.com/ajax/libs/babel-core/5.8.34/browser.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/react/15.3.0/react.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/react/15.3.0/react-dom.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/classnames/2.2.5/index.min.js"></script>

<%# JavaScript included in head because of the style guide's script tags %>
<%= javascript_include_tag 'dummy', type: 'text/babel' %>

</head>
<body>

<% if @menu_types || controller_name == "branding" %>
  <div class="karl-Container">
    <nav class="karl-Menu">
      <a class="karl-Menu__title">menu</a>

      <div class="k-u-clearfix"></div>

      <%= link_to "Branding", branding_path, class: "karl-Menu__listTitle" %>
      <ul data-karl-menu >
        <li class="karl-Menu__list"><%= link_to "KissKissBankBank",'#kisskiss', class: "karl-Menu__listItem with-arrow #{'is-opened' if params[:theme] == 'kisskissbankbank'}" %>
          <ul class="karl-Menu__subList <%= 'is-opened' if params[:theme] == 'kisskissbankbank' %>">
            <li><a href="#kisskisscolors" class="karl-Menu__subListItem">Colors</a></li>
            <li><a href="#kisskissfonts" class="karl-Menu__subListItem">Fonts</a></li>
          </ul>
        </li>
        <li class="karl-Menu__list"><%= link_to "hellomerci", '#hellomerci', class: "karl-Menu__listItem with-arrow #{'is-opened' if params[:theme] == 'hellomerci'}" %>
          <ul class="karl-Menu__subList">
            <li><a href="#hellomercicolors" class="karl-Menu__subListItem">Colors</a></li>
            <li><a href="#hellomercifonts" class="karl-Menu__subListItem">Fonts</a></li>
          </ul>
        </li>
        <li class="karl-Menu__list"><%= link_to "LENDOPOLIS", '#lendopolis', class: "karl-Menu__listItem with-arrow #{'is-opened' if params[:theme] == 'lendopolis'}" %>
          <ul class="karl-Menu__subList">
            <li><a href="#lendopoliscolors" class="karl-Menu__subListItem">Colors</a></li>
            <li><a href="#lendopolisfonts" class="karl-Menu__subListItem">Fonts</a></li>
          </ul>
        </li>
      </ul>

      <%= link_to "Components", components_path, class: "karl-Menu__listTitle" %>
      <% if @menu_types %>
        <ul data-karl-menu>
          <% @menu_types.each do |type_id:, type_title:, groups:| %>
            <li class="karl-Menu__list">
              <a href="#<%= type_id %>"
                 class="karl-Menu__listItem <%= "with-arrow" if groups.any? %>"><%= type_title %></a>
              <ul class="karl-Menu__subList">
                <% groups.each do |group_id:, group_title:, components:| %>
                  <li>
                    <a href="#<%= group_id %>"
                       class="karl-Menu__subListItem <%= "with-arrow" if components.any? %>"><%= group_title %></a>
                    <ul class="karl-Menu__subSecondList">
                      <% components.each do |component_id:, component_title:| %>
                        <li>
                          <a class="karl-Menu__subSecondListItem"
                             href="#<%= component_id %>"><%= component_title %></a>
                        </li>
                      <% end %>
                    </ul>
                  </li>
                <% end %>
              </ul>
            </li>
          <% end %>
        </ul>
      <% end %>
    </nav>

    <div class="karl-Content">
      <section>
        <header class="karl-Title__header">Styleguide <strong>KissKiss&Co</strong></header>
        <%= yield %>
      </section>
    </div>
  </div>
<% else %>
  <%= yield %>
<% end %>

<%#= javascript_include_tag 'kitten/noframework.waypoints.min.js' %>
<%= javascript_include_tag 'kitten/jquery-3.1.0.min.js' %>
<%#= javascript_include_tag 'kitten/waypoint.js' %>
<%= javascript_include_tag 'kitten/dropdown.js' %>
<%= javascript_include_tag 'kitten/karl.js' %>

</body>
</html>
