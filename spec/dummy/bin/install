#!/bin/sh

set -e

NPM_VERSION=$(npm --version)

if [[ $NPM_VERSION =~ ^3.[.0-9]* ]]; then
  echo 'okok'
  bundle
  npm i
else
  echo ""
  echo "--------------------------------------------------"
  echo "|                /!\  WARNING /!\                |"
  echo "--------------------------------------------------"
  echo ""
  echo "| The dummy app client installation needs npm >= 3."
  echo "| Make sure you have the right version of node.js and npm before running \
the installation again."
fi
