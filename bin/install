#!/usr/bin/env bash
set -e

# Force node version
if command -v nvm 2> /dev/null; then
  nvm use 8.11
fi

# Install yarn with npm
if ! command -v yarn 2> /dev/null; then
  npm install -g yarn
fi

# Install dependencies
gem install --no-document bundler
bundle install --quiet
yarn -sf install

cd spec/dummy
bash bin/install
